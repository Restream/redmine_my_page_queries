<%= stylesheet_link_tag 'my_page_queries', plugin: 'redmine_my_page_queries' %>
<%= javascript_include_tag 'my_page_queries', plugin: 'redmine_my_page_queries' %>
<div class="contextual">
  <%= link_to l(:label_personalize_page), action: 'page_layout' %>
</div>

<h2><%= l(:label_my_page) %></h2>

<div id="list-top">
  <% @blocks['top'].each do |b|
    next unless block_exists?(@user, b) %>
    <div class="mypage-box">
      <%= render_block(@user, b) %>
    </div>
  <% end if @blocks['top'] %>
</div>

<div id="list-left" class="splitcontentleft">
  <% @blocks['left'].each do |b|
    next unless block_exists?(@user, b) %>
    <div class="mypage-box">
      <%= render_block(@user, b) %>
    </div>
  <% end if @blocks['left'] %>
</div>

<div id="list-right" class="splitcontentright">
  <% @blocks['right'].each do |b|
    next unless block_exists?(@user, b) %>
    <div class="mypage-box">
      <%= render_block(@user, b) %>
    </div>
  <% end if @blocks['right'] %>
</div>

<%= context_menu issues_context_menu_path %>

<% html_title(l(:label_my_page)) -%>
